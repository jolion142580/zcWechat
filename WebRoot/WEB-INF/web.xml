<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>WebAgenda 1.0</display-name>
  <description>www.flowring.com web solution</description>

  <context-param>
    <param-name>en</param-name>
    <param-value>BIG5</param-value>
  </context-param>
  <context-param>
    <param-name>en_US</param-name>
    <param-value>BIG5</param-value>
  </context-param>
  <context-param>
    <param-name>zh_CN</param-name>
    <param-value>GB2312</param-value>
  </context-param>
  <context-param>
    <param-name>zh_TW</param-name>
    <param-value>BIG5</param-value>
  </context-param>
  <context-param>
    <param-name>language</param-name>
    <param-value>byUser</param-value>
  </context-param>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>WEB-INF/classes/applicationContext.xml</param-value>
  </context-param>
  
 <!--  <filter>    
   <filter-name>WxBrowser</filter-name>    
   <filter-class>com.gdyiko.zcwx.filter.WxBrowserFilter</filter-class>   
 </filter>    
   
 <filter-mapping>    
   <filter-name>WxBrowser</filter-name>  
   <url-pattern>*.jsp</url-pattern>    
 </filter-mapping>   -->
  
  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>
  		org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter
  	</filter-class>
    <init-param>
      <param-name>actionPackages</param-name>
      <param-value>com.gdyiko.partone.action</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>hibernateFilter</filter-name>
    <filter-class> 
	 com.gdyiko.tool.OurOpenSessionInViewFilter 
	 </filter-class>
    <init-param>
      <param-name>singleSession</param-name>
      <param-value>true</param-value>
    </init-param>
    <init-param>
      <param-name>sessionFactoryBeanName</param-name>
      <param-value>sessionFactory</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>hibernateFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>SysContentFilter</filter-name>
    <filter-class> 
	 com.gdyiko.tool.SysContentFilter 
	 </filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SysContentFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.gdyiko.tool.onlineListener</listener-class>
  </listener>
  
  
  <servlet>
    <description></description>
    <display-name>WeixinServlet</display-name>
    <servlet-name>WeixinServlet</servlet-name>
    <servlet-class>com.gdyiko.zcwx.servlet.WeixinServlet</servlet-class>
  </servlet>
   <servlet>
    <description></description>
    <display-name>HttpUtil</display-name>
    <servlet-name>HttpUtil</servlet-name>
    <servlet-class>com.gdyiko.zcwx.servlet.HttpUtil</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>InitServlet</servlet-name>
    <servlet-class>com.gdyiko.zcwx.servlet.InitServlet</servlet-class>
    <load-on-startup>1</load-on-startup>  
  </servlet>
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet-mapping>
    <servlet-name>WeixinServlet</servlet-name>
    <url-pattern>/WeixinServlet.servlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>HttpUtil</servlet-name>
    <url-pattern>/HttpUtil.servlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>InitServlet</servlet-name>
    <url-pattern>/servlet/InitServlet</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  
  <welcome-file-list>
    <welcome-file>web/mainPage.jsp</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>open.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
</web-app>